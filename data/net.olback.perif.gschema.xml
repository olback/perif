<?xml version="1.0" encoding="UTF-8"?>

<schemalist gettext-domain="perif">

    <schema path="/net/olback/perif/" id="net.olback.perif">

        <key type="b" name="show-information">
            <default>false</default>
            <summary>Show Information</summary>
            <description>
                Show the 'Information' section in the device view.
            </description>
        </key>

        <key type="b" name="show-command-result">
            <default>true</default>
            <summary>Show Command Result</summary>
            <description>
                Show the result of commands at the bottom of the window in a InfoBar.
            </description>
        </key>

    </schema>

</schemalist>
